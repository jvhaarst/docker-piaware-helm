{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/sdr-enthusiasts/docker-piaware"
      ],
      "versioning": "regex:^latest-build-(?<major>\\d+)$"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/piaware/values\\.yaml$/"
      ],
      "matchStrings": [
        "repository:\\s*(?<depName>ghcr\\.io/sdr-enthusiasts/docker-piaware)\\s*\\n\\s*tag:\\s*(?<currentValue>latest-build-\\d+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^latest-build-(?<major>\\d+)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/piaware/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>build-\\d+)\""
      ],
      "depNameTemplate": "ghcr.io/sdr-enthusiasts/docker-piaware",
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^latest-(?<currentValue>build-\\d+)$",
      "extractVersionTemplate": "^latest-(?<version>build-\\d+)$"
    }
  ]
}
